<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SignatureGenerator.App"
             RequestedThemeVariant="Light">

  <Application.Resources>
    <!-- Soft, marine-ish page background (very light blue gradient) -->
    <LinearGradientBrush x:Key="PrimaryBackground" StartPoint="0,0" EndPoint="0,1">
      <GradientStop Color="#F7FAFF" Offset="0"/>
      <GradientStop Color="#EEF5FF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Core palette -->
    <SolidColorBrush x:Key="SurfaceBrush">#FFFFFFFF</SolidColorBrush>           <!-- cards / inputs -->
    <SolidColorBrush x:Key="HeadingBrush">#0B1B3B</SolidColorBrush>             <!-- deep navy -->
    <SolidColorBrush x:Key="BodyBrush">#1F2B45</SolidColorBrush>                <!-- readable body -->
    <SolidColorBrush x:Key="BodyMutedBrush">#6C7A91</SolidColorBrush>           <!-- muted labels -->
    <SolidColorBrush x:Key="CardBorderBrush">#E1E8F5</SolidColorBrush>          <!-- light blue-gray border -->

    <!-- Accent blues (marine vibe) -->
    <SolidColorBrush x:Key="AccentBrush">#1D4ED8</SolidColorBrush>              <!-- primary -->
    <SolidColorBrush x:Key="AccentBrushHover">#1B44C2</SolidColorBrush>         <!-- hover -->
    <SolidColorBrush x:Key="AccentBrushPressed">#15389F</SolidColorBrush>       <!-- pressed -->

    <!-- Danger (only for delete) -->
    <SolidColorBrush x:Key="DangerBrush">#E03131</SolidColorBrush>
    <SolidColorBrush x:Key="DangerBrushHover">#C92A2A</SolidColorBrush>

    <!-- Inter font -->
    <FontFamily x:Key="AppFont">avares://Avalonia.Fonts.Inter/Fonts#Inter</FontFamily>
  </Application.Resources>

  <Application.Styles>
    <FluentTheme/>

    <!-- Global font -->
    <Style Selector="Control">
      <Setter Property="TextElement.FontFamily" Value="{DynamicResource AppFont}"/>
    </Style>

    <!-- Text defaults -->
    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="{DynamicResource HeadingBrush}"/>
    </Style>

    <!-- Headings -->
    <Style Selector="TextBlock.h1">
      <Setter Property="FontSize" Value="30"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="Foreground" Value="{DynamicResource HeadingBrush}"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="0,0,0,6"/>
    </Style>

    <Style Selector="TextBlock.subtitle">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Foreground" Value="{DynamicResource BodyMutedBrush}"/>
      <Setter Property="TextAlignment" Value="Center"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="MaxWidth" Value="720"/>
      <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style Selector="TextBlock.muted">
      <Setter Property="Foreground" Value="{DynamicResource BodyMutedBrush}"/>
    </Style>

    <!-- Cards -->
    <Style Selector="Border.card">
      <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
      <Setter Property="CornerRadius" Value="16"/>
      <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="22"/>
      <Setter Property="BoxShadow" Value="0 10 30 0 #22000000, 0 2 6 0 #12000000"/>
    </Style>

    <!-- Chip -->
    <Style Selector="Border.chip">
      <Setter Property="Background" Value="#E8F0FF"/>
      <Setter Property="BorderBrush" Value="#D5E2FF"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="999"/>
      <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- ===================== TextBox: white always, blue border feedback ===================== -->

    <!-- TextBox (outer control sizing/typography) -->
    <Style Selector="TextBox">
      <Setter Property="Padding" Value="10,6"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Foreground" Value="{DynamicResource HeadingBrush}"/>
      <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <!-- Inner template parts (this keeps background white on hover/focus) -->
    <Style Selector="TextBox /template/ Border#border">
      <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <Style Selector="TextBox /template/ ScrollViewer#PART_ContentHost">
      <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
    </Style>

    <!-- Hover: blue border -->
    <Style Selector="TextBox:pointerover /template/ Border#border">
      <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Focus: darker blue, thicker border -->
    <Style Selector="TextBox:focus /template/ Border#border">
      <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource AccentBrushHover}"/>
      <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Disabled: still white -->
    <Style Selector="TextBox:disabled /template/ Border#border">
      <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- ===================== Buttons ===================== -->

    <!-- Tiny red delete button -->
    <Style Selector="Button.danger">
      <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderBrush" Value="{DynamicResource DangerBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="8,4"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.danger:pointerover">
      <Setter Property="Background" Value="{DynamicResource DangerBrushHover}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource DangerBrushHover}"/>
    </Style>

    <!-- Base Button -->
    <Style Selector="Button">
      <Setter Property="CornerRadius" Value="10"/>
      <Setter Property="Padding" Value="18,12"/>
      <Setter Property="FontSize" Value="16"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Foreground" Value="{DynamicResource HeadingBrush}"/>
      <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Transitions">
        <Setter.Value>
          <Transitions>
            <BrushTransition Property="Background" Duration="0:0:0.10"/>
            <BrushTransition Property="BorderBrush" Duration="0:0:0.10"/>
          </Transitions>
        </Setter.Value>
      </Setter>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{TemplateBinding CornerRadius}"
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter
                Content="{TemplateBinding Content}"
                ContentTemplate="{TemplateBinding ContentTemplate}"
                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                RecognizesAccessKey="True"
                TextElement.Foreground="{TemplateBinding Foreground}"
                TextElement.FontSize="{TemplateBinding FontSize}"
                TextElement.FontWeight="{TemplateBinding FontWeight}"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <!-- Primary (solid marine blue) -->
    <Style Selector="Button.primary">
      <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
    </Style>
    <Style Selector="Button.primary:pointerover">
      <Setter Property="Background" Value="{DynamicResource AccentBrushHover}"/>
    </Style>
    <Style Selector="Button.primary:disabled">
      <Setter Property="Background" Value="#E8EDF7"/>
      <Setter Property="Foreground" Value="#93A3C3"/>
      <Setter Property="BorderBrush" Value="#E0E6F2"/>
    </Style>

    <!-- Outline -->
    <Style Selector="Button.outline">
      <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
      <Setter Property="Foreground" Value="{DynamicResource HeadingBrush}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
    </Style>
    <Style Selector="Button.outline:pointerover">
      <Setter Property="Background" Value="#F4F8FF"/>
      <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
    </Style>

  </Application.Styles>
</Application>
